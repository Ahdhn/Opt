#version 330 // -*- c++ -*-

/** 
\file imageQuotient.pix 
*/
#include <compatibility.glsl>


uniform sampler2D input0_buffer;
uniform sampler2D input1_buffer;

out vec4 result;

void main() {
    float ep = 0.000001;
    vec4 eps = vec4(ep,ep,ep,ep);
    result = (texelFetch(input0_buffer, ivec2(gl_FragCoord.xy), 0) + eps)  / (texelFetch(input1_buffer, ivec2(gl_FragCoord.xy), 0) + eps);
}

